@model IEnumerable<Cadastro.Domain.Entities.Product>

@{
    ViewData["Title"] = "Plano de classificação";
}

<font color="#FFFAFA"><h1>Plano de classificação</h1></font>

<p>
    <a asp-action="Create">Nova classe</a>
</p>

<style type="text/css">
    table {
        border: groove 2px #000000;
        background-color: #FFFAFA;
        color: #FFFAFA;
    }

</style>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Value)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Category.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
        <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
        <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
    </td>
        <form method="post" asp-controller="Products" asp-action="Export">
            <input type="submit" value="Export" />
        </form>
</tr>}
    </tbody>
</table>
